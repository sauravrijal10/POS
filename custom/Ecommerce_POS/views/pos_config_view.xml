<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='order_reference']" position="attributes">
                <attribute name="groups"></attribute>
            </xpath>
            <xpath expr="//field[@name='pos_sequence_id']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
        </field>
    </record>

    <record id="action_ecommerce_posproduct" model="ir.actions.act_window">
        <field name="name">POS Config</field>
        <field name="res_model">pos.config</field>
        <field name="view_mode">tree,kanban</field>
        <field name="target">main</field>
        <field name="context">{'menu_id': 284}</field>
    </record>

    <menuitem id="menu_action_custom_pos_config"
          name="POS Configurations"
          parent="menu_ecommerce_dashboardoperation"
          action="action_ecommerce_posproduct"
          sequence="10"/>

</data>

</odoo>

